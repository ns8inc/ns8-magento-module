{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "noLib": false,
    "outDir": "dist",
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2017"
  },
  "exclude": [
    "test/**/*",
    "node_modules",
    "dist"
  ],
  "include": [
    "app.ts"
  ]
}
