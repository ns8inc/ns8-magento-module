{
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "incremental": true,
    "module": "commonjs",
    "outDir": "tmp_tsc_compile",
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2017",
    "types": ["jest"],
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "test/**/*",
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
