{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": false,
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2017"
  },
  "exclude": [
    "test/**/*",
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
